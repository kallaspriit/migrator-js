{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "rootDirs": ["src", "example"],
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "experimentalDecorators": true
  }
}
